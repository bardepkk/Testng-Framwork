<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests">

  <listeners>
    <listener class-name="TestComponents.Listeners"/>
  </listeners>

  <!-- Apply group filtering inside each test, not at suite level -->
  <test name="SubmitOrder" thread-count="5">
    <groups>
      <run>
        <include name="purchase"/>
      </run>
    </groups>
    <classes>
      <class name="pranayTest.SubmitOrder"/>
    </classes>
  </test>

  <test name="ErrorValidation" thread-count="5">
    <groups>
      <run>
        <include name="purchase"/>
      </run>
    </groups>
    <classes>
      <class name="pranayTest.ErrorValidation"/>
    </classes>
  </test>

</suite>
